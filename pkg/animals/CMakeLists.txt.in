cmake_minimum_required(VERSION 2.6)

project(PKG-ANIMALS)

set(CPACK_PACKAGE_NAME "animals")
set(CPACK_PACKAGE_DESCRIPTION_SUMMARY "Animal behaviour programs")
set(CPACK_PACKAGE_DESCRIPTION "Animal behaviour programs")
set(CPACK_PACKAGE_DESCRIPTION_FILE "@CMAKE_CURRENT_SOURCE_DIR@/animals/PackageDescription.txt")

# Following values replaced by configure_file() in pkg/CMakeLists.txt.
set(VERSION_MAJOR_MINOR_PATCH_BUILD @VERSION_MAJOR_MINOR_PATCH_BUILD@)
set(INSTALL_BINS "@INSTALL_BINS@")

install(
    FILES
    ${INSTALL_BINS}
    DESTINATION bin
    PERMISSIONS
        OWNER_READ OWNER_WRITE OWNER_EXECUTE
        GROUP_READ GROUP_EXECUTE
        WORLD_READ WORLD_EXECUTE
)

include(@CMAKE_SOURCE_DIR@/pkg/CMakeCommon.txt)
